<% include ../partials/_header %>

<div class="col-12">
    <!-- Main Content -->
    <div class="row">
        <div class="col-12 mt-3 text-center text-uppercase">
            <h2>Shopping Cart</h2>
        </div>
    </div>

    <main class="row">
        <div class="col-12 bg-white py-3 mb-3">
            <div class="row">
                <div class="col-lg-6 col-md-8 col-sm-10 mx-auto table-responsive">
                    <form class="row">
                        <div class="col-12">
                    <% if(products) { %>
                        <% for(var i = 0; i < products.length; i++) { %>
                            <table class="table table-striped table-hover table-sm">
                                <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Qty</th>
                                    <th>Amount</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>
                                        <img src="<%= products[i].item.image %>" class="img-fluid">
                                        <%= products[i].item.title %>
                                    </td>
                                    <td>
                                        $ <%= products[i].price %>
                                    </td>
                                    <td>
                                            <%= products[i].qty %> 
                                            <a href="/reduce/<%= products[i].item._id %>" class="btn btn-link text-danger"><i class="fas fa-times"></i></a>
                                            <a href="/sumar/<%= products[i].item._id %>" class="btn btn-link text-danger"><i class="fas fa-times"></i></a>

                                    </td>
                                    <td>
                                            <%= products[i].qty %>                                 
                                    <td>
                                        <a href="/remove/<%= products[i].item._id %>" class="btn btn-link text-danger"><i class="fas fa-times"></i></a>
                                    </td>
                                </tr>
                                <% } %>            

                                </tbody>
                                <tfoot>
                                <tr>
                                    <th colspan="3" class="text-right">Total</th>
                                    <th><%= totalPrice %></th>
                                    <th></th>
                                </tr>
                                </tfoot>
                            </table>

                        </div>
                        <div class="col-12 text-right">
                            <button class="btn btn-outline-secondary mr-3" type="submit">Update</button>
                            <a href="#" class="btn btn-outline-success">Checkout</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <% } else { %>                    

            <div class="row">
                <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                    <h2>no items</h2>
                </div>
            </div>
            
            <% } %>
            

    </main>
    <!-- Main Content -->
</div>

